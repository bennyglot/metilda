{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "src/scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/scripts/**/*.js",
    "src/scripts/**/*.jsx",
  ]
}
