{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/scripts/**/*.js",
    "src/scripts/**/*.jsx",
    "src/packages/**/*.js",
    "src/packages/**/*.jsx",
  ]
}
